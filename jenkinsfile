pipeline {
    agent any
        stages {
          stage('prepration') {
            steps {
                // Get some code from a GitHub repository
                 git branch: 'main',
                    url: 'https://github.com/Hassan-Ashraf-Elshennawy/ITI-Graduation-Project.git'

            }
        }
        stage('building') {
            steps {
                  withCredentials([usernamePassword(credentialsId: 'docker-hub', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')])
                {
                    sh "pwd"
                    sh "docker docker build . -t app.node"
                    sh "docker tag app_image hassanashrafelshennawy/app_node"
                    sh "docker push hassanashrafelshennawy/app_node"
                    
                }
            }    
        }
         stage ('deployment'){
            steps {
                sh """
                kubectl apply -f namespace.yml
                kubectl apply -f deployment.yml
                kubectl apply -f jenkins-service.yml
                echo "CICD DONE"
            """
            }
        
         }
        }}   